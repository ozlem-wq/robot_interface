QWidget {
    background-color: #0A0A0A;
    color: #FFFFFF;
    font-family: 'Segoe UI';
    font-size: 14px;
}

QPushButton {
    background-color: #007BFF;
    color: white;
    border-radius: 6px;
    padding: 8px;
}

QPushButton:hover {
    background-color: #0056b3;
}

QProgressBar {
    border: 2px solid #555;
    border-radius: 5px;
    background: #2A2A2A;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #1DB954;
}
